  <Target Name="PreBuild1" BeforeTargets="PreBuildEvent" Condition="'$(Configuration)' == 'Debug'">
    <Exec Command="npm install" WorkingDirectory="NpmJS" />
    <Exec Command="npm run dev" WorkingDirectory="NpmJS" />
  </Target>
  
</Project>
